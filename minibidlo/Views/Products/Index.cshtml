@model IEnumerable<minibidlo.Models.Catalog>

<h1>Список товаров</h1>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Описание</th>
            <th>Цена</th>
            <th>Размер</th>
            <th>Материал</th>
            <th>Наличие</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.Size</td>
                <td>@product.Material</td>
                <td>@product.Stock</td>
                <td>
                    <a asp-action="Edit" asp-controller="Products" asp-route-id="@product.ProductId">Редактировать</a> |
                    <a asp-action="Delete"  asp-controller="Products" asp-route-id="@product.ProductId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Создать новый товар</a>
