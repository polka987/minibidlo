<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Minibidlo</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="/">Minibidlo</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/">Главная</a></li>
                <li class="nav-item"><a class="nav-link" href="/Home/AboutUs">О нас</a></li>
                <li class="nav-item"><a class="nav-link" href="/Home/Products">Продукты</a></li>
                <li class="nav-item"><a class="nav-link" href="/Home/Basket">Корзина</a></li>
                <li class="nav-item"><a class="nav-link" href="/Home/Profile">Профиль</a></li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Products" asp-action="Index">AddProducts</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container flex-grow-1">
        @RenderBody()
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">© 2024 Minibidlo. Все права защищены.</span>
        </div>
    </footer>
</body>
</html>
